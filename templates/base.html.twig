<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <!-- Bootstrap core CSS -->
            <link rel="stylesheet"  href="{{ asset('vendor/bootstrap/css/bootstrap.css') }}" type="text/css"/>

            <!-- Custom styles for this template -->
            <link rel="stylesheet" href="{{ asset('css/one-page-wonder.css') }}" type="text/css"/>
            <link rel="stylesheet" href="{{ asset('vendor/fortawesome/font-awesome/css/all.css') }}"/>
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
        {% endblock %}

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">
        <link href="https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Lato:100,100i,300,300i,400,400i,700,700i,900,900i" rel="stylesheet">
    </head>

    <div>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
        <div class="container">
            <a class="navbar-brand" href="{{ path('home') }}">Home</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            {%  if app.request.get('_route') == 'dashboard'
                or app.request.get('_route') == 'addTricks'
                or app.request.get('_route') == 'admin/article/{{ app.request.query.all }}/edit'
                or app.request.get('_route') == 'trickList' %}

            <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a class="nav-link">|</a></li>
            </ul>
                    <a class="nav-item memberMenu" href="{{ path('trickList') }}">My Tricks  </a>
                    <a class="nav-item memberMenu" href="{{ path('admin_tricks_new') }}">New Tricks</a>
          {%  endif %}


            {% if is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') %}
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                        <a href="{{ path('dashboard') }}" class="nav-link"> {% if visitorName is defined %} <span class ="badge badge-info"> Member Space {{ visitorName }}</span>
                                 {% endif %}</a>
                        </li>

                        <li class="nav-item"><a class="nav-link">|</a></li>

                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('logout') }}">Log Out</a>
                        </li>
                    </ul>
                </div>

            {% else %}

                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('register') }}">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('login') }}">Log In</a>
                        </li>
                    </ul>
                </div>

            {% endif %}

        </div>
    </nav>

    <div class="{{ app.session.flashbag.peek('success')|length > 0 ? '' : 'mb-5' }} fixed-bottom">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
    </div>



        {% block body %}{% endblock %}
        {% block javascripts %}
            <!-- Bootstrap core JavaScript -->
            <script src="vendor/jquery/jquery.min.js"></script>
            <link href="{{ asset('vendor/jquery/jquery.min.js') }}" />

            <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
            <link href="{{ asset('vendor/bootstrap/js/bootstrap.bundle.min.js') }}" />
        {% endblock %}

    </body>
</html>
