{% extends 'base.html.twig' %}

{% block body %}

    <br/><br/><br/><br/>
    <div class="center-block example-wrapper">

        <a href="{{ path('admin_tricks_new') }}" class="btn btn-primary center-block text-center">
            Create <span class="fa fa-plus-circle"></span>
        </a>
        <br/><br/>
        <h1>My SnowTricks</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Edit</th>

            </tr>
            </thead>
            <tbody>
            {% for trick in tricks %}
                {%  if trick.author.username == visitorName %}
                <tr>
                    <td>{{ trick.name }}</td>
                    <td>{{ trick.description }}</td>
                    <td>
                        <a href="{{ path('admin_article_edit', {
                            tricks: trick.id
                        }) }}">Edit
                            <span class="fa fa-pencil"></span>
                        </a>
                    </td>
                </tr>
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}


